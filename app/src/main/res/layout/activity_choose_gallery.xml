<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="hackathon.com.museuimpressoes.ChooseGalleryActivity">

    <TextView
        android:id="@+id/gallery1button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity= "center_horizontal"
        android:text="@string/gallery1_textview"
        android:textSize="25sp"
        android:textColor="@color/choose_gallery_button_color"
        android:fontFamily="sans-serif-condensed"
        android:textAllCaps="true"
        android:clickable="true"
        android:onClick="callGallery1"/>

    <TextView
        android:id="@+id/gallery2button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@id/gallery1button"
        android:gravity= "center_horizontal"
        android:text="@string/gallery2_textview"
        android:textSize="25sp"
        android:textColor="@color/choose_gallery_button_color"
        android:fontFamily="sans-serif-condensed"
        android:textAllCaps="true"
        android:clickable="true"
        android:onClick="callGallery2"/>

    <TextView
        android:id="@+id/footer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/gallery2button"
        android:layout_marginTop="190dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity= "center_horizontal"
        android:text="@string/hackathon_footer"
        android:textColor="@color/hackathon_footer_color"/>

</RelativeLayout>
